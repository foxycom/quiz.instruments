<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kidscademy.instruments.quiz"
    android:installLocation="auto"
    android:versionCode="4"
    android:versionName="1.0.4-DEBUG" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="27" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name="com.kidscademy.instruments.quiz.App"
        android:allowBackup="false"
        android:debuggable="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_caption"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.AppCompat.NoActionBar" >
        <activity android:name="com.kidscademy.instruments.quiz.LauncherActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.kidscademy.instruments.quiz.MainActivity"
            android:launchMode="singleTask" />
        <activity android:name="com.kidscademy.instruments.quiz.GameActivity" />
        <activity android:name="com.kidscademy.instruments.quiz.QuizActivity" />
        <activity android:name="com.kidscademy.instruments.quiz.LevelsActivity" />
        <activity
            android:name="com.kidscademy.instruments.quiz.LevelInstrumentsActivity"
            android:label="@string/level_brands_caption"
            android:noHistory="true" />
        <activity
            android:name="com.kidscademy.instruments.quiz.BalanceActivity"
            android:noHistory="true" />
        <activity
            android:name="com.kidscademy.instruments.quiz.QuizStartActivity"
            android:parentActivityName="com.kidscademy.instruments.quiz.MainActivity" />
        <activity
            android:name="com.kidscademy.instruments.quiz.GameOverActivity"
            android:parentActivityName="com.kidscademy.instruments.quiz.MainActivity" />
        <activity
            android:name="com.kidscademy.instruments.quiz.ShareActivity"
            android:parentActivityName="com.kidscademy.instruments.quiz.MainActivity" />
        <activity
            android:name="com.kidscademy.instruments.quiz.RecommendedActivity"
            android:parentActivityName="com.kidscademy.instruments.quiz.MainActivity" />
        <activity
            android:name="com.kidscademy.instruments.quiz.AboutActivity"
            android:parentActivityName="com.kidscademy.instruments.quiz.MainActivity" />
        <activity
            android:name="com.kidscademy.instruments.quiz.NoAdsActivity"
            android:parentActivityName="com.kidscademy.instruments.quiz.MainActivity" />
        <activity
            android:name="com.kidscademy.instruments.quiz.FeaturesActivity"
            android:parentActivityName="com.kidscademy.instruments.quiz.MainActivity" />

        <!-- Activities inherited from core application library -->
        <activity
            android:name="com.kidscademy.app.PreferencesActivity"
            android:parentActivityName="com.kidscademy.instruments.quiz.MainActivity"
            android:theme="@style/Theme.AppCompat" />
        <activity
            android:name="com.kidscademy.app.ErrorActivity"
            android:excludeFromRecents="true"
            android:launchMode="singleTask"
            android:noHistory="true" />

        <!-- Facebook support -->
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_caption"
            android:theme="@style/com_facebook_activity_theme" />

        <!-- get application id from Facebook Developer / Application /Settings / App ID -->
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_apikey" />
        <!-- post is rejected if application name is not that declared into Facebook Developer / Application /Settings / Display Name -->
        <meta-data
            android:name="com.facebook.sdk.ApplicationName"
            android:value="@string/app_name" />

        <!-- provider class name is suffixed with apikey -->
        <!-- TODO: replace apikey placeholder with real facebook apikey otherwise apk deploy will fail -->
        <provider
            android:name="com.facebook.FacebookContentProvider"
            android:authorities="com.facebook.app.FacebookContentProvider592040027662527"
            android:exported="true" />

        <!-- Application Services -->
        <service
            android:name="com.kidscademy.app.SyncService"
            android:enabled="true" />
        <service
            android:name="com.kidscademy.app.LoadService"
            android:enabled="true" />

        <activity android:name="com.facebook.CustomTabMainActivity" />
        <!--
         The initialization ContentProvider will call FacebookSdk.sdkInitialize automatically
         with the application context. This config is merged in with the host app's manifest,
         but there can only be one provider with the same authority activated at any given
         point; so if the end user has two or more different apps that use Facebook SDK, only the
         first one will be able to use the provider. To work around this problem, we use the
         following placeholder in the authority to identify each host application as if it was
         a completely different provider.
        -->
        <provider
            android:name="com.facebook.internal.FacebookInitProvider"
            android:authorities="com.kidscademy.instruments.quiz.FacebookInitProvider"
            android:exported="false" />

        <receiver
            android:name="com.facebook.CurrentAccessTokenExpirationBroadcastReceiver"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.facebook.sdk.ACTION_CURRENT_ACCESS_TOKEN_CHANGED" />
            </intent-filter>
        </receiver>

        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="com.kidscademy.instruments.quiz.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>