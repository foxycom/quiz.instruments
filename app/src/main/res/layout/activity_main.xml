<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kidscademy.quiz.instruments.MainActivity">

    <ImageView
        style="@style/page_background"
        tools:src="@drawable/page_bg1" />

    <com.kidscademy.quiz.instruments.view.MovingDotsBackground
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:foregroundGravity="center_horizontal">

            <com.kidscademy.quiz.instruments.view.HexaIcon
                android:id="@+id/main_play"
                android:layout_width="128dp"
                android:layout_height="128dp"
                app:backgroundColor="#80ff8080"
                app:iconDrawable="@drawable/ic_action_game" />

            <com.kidscademy.quiz.instruments.view.HexaIcon
                android:id="@+id/main_quiz"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="56dp"
                app:backgroundColor="#8020e8ca"
                app:iconDrawable="@drawable/ic_action_quiz"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.kidscademy.quiz.instruments.view.HexaIcon
                android:id="@+id/main_balance"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_marginLeft="200dp"
                app:backgroundColor="#8040b5ff"
                app:iconDrawable="@drawable/ic_action_score"
                app:layout_constraintLeft_toLeftOf="parent" />

            <com.kidscademy.quiz.instruments.view.HexaIcon
                android:id="@+id/main_volume"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_marginStart="200dp"
                android:layout_marginTop="114dp"
                app:backgroundColor="#803358be"
                app:iconDrawable="@drawable/ic_action_volume_up"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/main_balance" />
        </android.support.constraint.ConstraintLayout>

        <LinearLayout style="@style/app_title_layout">

            <TextView
                style="@style/app_title"
                android:background="@drawable/right_border"
                android:text="Musical" />

            <TextView
                style="@style/app_title"
                android:background="@drawable/right_border2"
                android:text="Instruments" />

            <TextView
                style="@style/app_title"
                android:background="@drawable/right_border3"
                android:text="Quiz" />

        </LinearLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <com.kidscademy.quiz.instruments.view.HexaIcon
                android:id="@+id/main_about"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="64dp"
                app:backgroundColor="#8040b5ff"
                app:iconDrawable="@drawable/ic_action_info"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_editor_absoluteY="0dp" />

            <com.kidscademy.quiz.instruments.view.HexaIcon
                android:id="@+id/main_no_ads"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="36dp"
                app:backgroundColor="#8040b5ff"
                app:iconDrawable="@drawable/action_no_ads"
                app:layout_constraintTop_toTopOf="parent" />

            <com.kidscademy.quiz.instruments.view.HexaIcon
                android:id="@+id/main_recommended"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="64dp"
                android:layout_marginTop="72dp"
                app:backgroundColor="#80039d76"
                app:iconDrawable="@drawable/ic_action_apps"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.kidscademy.quiz.instruments.view.HexaIcon
                android:id="@+id/main_share"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="110dp"
                app:backgroundColor="#8053acb6"
                app:iconDrawable="@drawable/ic_action_share"
                app:layout_constraintTop_toTopOf="parent" />

            <com.kidscademy.quiz.instruments.view.HexaIcon
                android:id="@+id/main_rate"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="128dp"
                android:layout_marginTop="108dp"
                app:backgroundColor="#8069e68f"
                app:iconDrawable="@drawable/ic_action_rate"
                app:layout_constraintStart_toStartOf="@+id/main_share"
                app:layout_constraintTop_toTopOf="parent" />

            <com.kidscademy.quiz.instruments.view.HexaIcon
                android:id="@+id/main_settings"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="192dp"
                android:layout_marginTop="72dp"
                app:backgroundColor="#803358be"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.kidscademy.quiz.instruments.view.HexaIcon
                android:id="@+id/main_help"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="256dp"
                android:layout_marginTop="108dp"
                android:visibility="invisible"
                app:backgroundColor="#8040b5ff"
                app:iconDrawable="@drawable/ic_action_help"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>


    </RelativeLayout>

</FrameLayout>