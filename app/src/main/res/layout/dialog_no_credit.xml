<?xml version="1.0" encoding="utf-8"?>
<view xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    class="com.kidscademy.quiz.instruments.GameActivity$NoCreditDialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/compo_page_background" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:text="@string/no_credit_quiz"
        android:textColor="@color/cyan_300"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:gravity="center_horizontal"
        android:text="@string/no_credit_hints"
        android:textColor="@color/cyan_300"
        android:textSize="18sp" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/quiz_start_icons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:foregroundGravity="center_horizontal">

        <com.kidscademy.quiz.instruments.view.HexaIcon
            android:layout_width="128dp"
            android:layout_height="128dp"
            app:backgroundColor="#80ff8080" />

        <com.kidscademy.quiz.instruments.view.HexaIcon
            android:id="@+id/no_credit_action"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="56dp"
            app:backgroundColor="#8040b5ff"
            app:iconDrawable="@drawable/action_play"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.kidscademy.quiz.instruments.view.HexaIcon
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_marginStart="200dp"
            app:backgroundColor="#803358be"
            app:layout_constraintLeft_toLeftOf="parent" />

        <com.kidscademy.quiz.instruments.view.HexaIcon
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="114dp"
            app:backgroundColor="#8020e8ca"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.kidscademy.quiz.instruments.view.HexaIcon
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="170dp"
            app:backgroundColor="@color/cyan_300"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.kidscademy.quiz.instruments.view.HexaIcon
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_marginTop="228dp"
            app:backgroundColor="@color/blue_300"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <com.kidscademy.quiz.instruments.view.RandomColorFAB style="@style/FAB.DialogClose" />

</view>