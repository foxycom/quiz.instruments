<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/launcher"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kidscademy.quiz.instruments.LauncherActivity">

    <include layout="@layout/compo_page_background" />

    <include
        layout="@layout/compo_app_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/block_start_indent"
        android:layout_marginTop="120dp" />

    <TextView
        android:id="@+id/launcher_text"
        style="@style/Text.Block.Accent"
        android:layout_gravity="bottom"
        android:layout_marginBottom="40dp"
        android:text="@string/app_description" />

</FrameLayout>