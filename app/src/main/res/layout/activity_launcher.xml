<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/launcher"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kidscademy.quiz.instruments.LauncherActivity">

    <ImageView
        style="@style/page_background"
        android:src="@drawable/page_bg1" />

    <com.kidscademy.quiz.instruments.view.MovingDotsBackground
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        style="@style/app_title_layout"
        android:layout_marginTop="120dp">

        <TextView
            style="@style/app_title"
            android:background="@drawable/right_border"
            android:text="Musical" />

        <TextView
            style="@style/app_title"
            android:background="@drawable/right_border2"
            android:text="Instruments" />

        <TextView
            style="@style/app_title"
            android:background="@drawable/right_border3"
            android:text="Quiz" />

    </LinearLayout>

    <TextView
        android:id="@+id/launcher_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="40dp"
        android:background="@color/black_T40"
        android:paddingBottom="20dp"
        android:paddingLeft="40dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:text="@string/app_description"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/yellow_300" />

</FrameLayout>