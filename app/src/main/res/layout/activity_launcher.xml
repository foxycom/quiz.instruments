<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/launcher"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kidscademy.instruments.quiz.LauncherActivity">

    <ImageView
        style="@style/page_background"
        android:src="@drawable/page_bg1" />

    <com.kidscademy.instruments.quiz.view.MovingDotsBackground
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="120dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/right_border"
            android:paddingLeft="20dp"
            android:text="Musical"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/right_border2"
            android:paddingLeft="20dp"
            android:text="Instruments"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/right_border3"
            android:paddingLeft="20dp"
            android:text="Quiz"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="28sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/launcher_text"
        style="@style/launcher.text"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@color/black_T40"
        android:paddingBottom="20dp"
        android:paddingLeft="40dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:text="@string/app_description"
        android:textColor="@color/yellow_300" />

</FrameLayout>