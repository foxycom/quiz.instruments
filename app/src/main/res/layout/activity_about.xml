<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/compo_page_background" />

    <FrameLayout style="@style/Page.AutohideHeader">

        <TextView
            style="@style/Page.HeaderTitle"
            android:text="@string/app_logotype" />

        <ImageView style="@style/Page.HeaderIcon" />
    </FrameLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/about_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/page_body_margin_top">

            <TextView
                style="@style/Text.Paragraph"
                android:text="@string/about_p1" />

            <TextView
                style="@style/Text.Paragraph.Accent"
                android:text="@string/about_p2" />

            <TextView
                style="@style/Text.Paragraph"
                android:text="@string/about_p3" />

            <FrameLayout style="@style/InfoBox.Container">

                <js.view.IconView
                    style="@style/Icon.Developer"
                    android:src="@drawable/dev_iulian_rotaru" />

                <LinearLayout style="@style/InfoBox.LabelsGroup">

                    <TextView
                        style="@style/Text.Label.Title"
                        android:text="Iulian Rotaru"
                        android:textColor="@color/cyan_300" />

                    <TextView
                        style="@style/Text.Label.Block"
                        android:text="@string/about_dev1_skils" />

                    <TextView
                        style="@style/Text.Label.Block.Mute"
                        android:text="@string/about_place" />
                </LinearLayout>

            </FrameLayout>

            <FrameLayout style="@style/InfoBox.Container">

                <js.view.IconView
                    style="@style/Icon.Developer"
                    android:src="@drawable/dev_lucian_rotaru" />

                <LinearLayout style="@style/InfoBox.LabelsGroup">

                    <TextView
                        style="@style/Text.Label.Title"
                        android:text="Lucian Rotaru"
                        android:textColor="@color/green_300" />

                    <TextView
                        style="@style/Text.Label.Block"
                        android:text="@string/about_dev2_skils" />

                    <TextView
                        style="@style/Text.Label.Block.Mute"
                        android:text="@string/about_place" />
                </LinearLayout>

            </FrameLayout>

            <FrameLayout style="@style/InfoBox.Container.Last">

                <js.view.IconView
                    style="@style/Icon.Developer"
                    android:src="@drawable/dev_octavian_rotaru" />

                <LinearLayout style="@style/InfoBox.LabelsGroup">

                    <TextView
                        style="@style/Text.Label.Title"
                        android:text="Octavian Rotaru"
                        android:textColor="@color/yellow_300" />

                    <TextView
                        style="@style/Text.Label.Block"
                        android:text="@string/about_dev3_skils" />

                    <TextView
                        style="@style/Text.Label.Block.Mute"
                        android:text="@string/about_place" />

                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <com.kidscademy.quiz.instruments.view.RandomColorFAB
        style="@style/FAB.Back.Autohide"
        app:layout_anchor="@id/about_scroll" />

</android.support.design.widget.CoordinatorLayout>
