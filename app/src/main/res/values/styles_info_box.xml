<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="InfoBox"></style>

    <style name="InfoBox.Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/paragraph_margin_top</item>
        <item name="android:background">@color/black_T40</item>
        <item name="android:paddingBottom">@dimen/container_padding</item>
        <item name="android:paddingLeft">@dimen/container_padding</item>
        <item name="android:paddingTop">@dimen/container_padding</item>
    </style>

    <!-- all containers have margin top; the last container has also margin bottom of the same value as margin top  -->
    <style name="InfoBox.Container.Last">
        <item name="android:layout_marginBottom">@dimen/paragraph_margin_top</item>
    </style>

    <style name="InfoBox.LabelsGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/labels_group_left_margin</item>
        <item name="android:orientation">vertical</item>
    </style>
</resources>