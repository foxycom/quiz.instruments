<?xml version="1.0" encoding="utf-8"?>
<resources>
    <item name="page_background" type="id" />
    <item name="fab_back" type="id" />
    <item name="fab_close" type="id" />
    <item name="fab_dialog_close" type="id" />

    <style name="app_title_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="app_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="page_background">
        <item name="android:id">@id/page_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="page_background_mask">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/black</item>
        <item name="android:alpha">0.2</item>
    </style>


    <style name="page_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_behavior">com.kidscademy.quiz.instruments.util.HeaderHideBehavior</item>
    </style>

    <style name="header_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/header_height</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingStart">@dimen/paragraph_start_indent</item>
        <item name="android:paddingEnd">@dimen/paragraph_end_indent</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">@color/cyan_300</item>
        <item name="android:background">@color/black_T40</item>
    </style>

    <style name="header_icon">
        <item name="android:layout_width">@dimen/header_icon_size</item>
        <item name="android:layout_height">@dimen/header_icon_size</item>
        <item name="android:layout_gravity">bottom|right</item>
        <item name="android:layout_marginTop">@dimen/header_icon_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/paragraph_end_indent</item>
    </style>

    <style name="paragraph">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/sections_space</item>
        <item name="android:paddingStart">@dimen/paragraph_start_indent</item>
        <item name="android:paddingEnd">@dimen/paragraph_end_indent</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="paragraph.accent">
        <item name="android:textColor">@color/yellow_300</item>
    </style>

    <style name="paragraph.emphasized">
        <item name="android:paddingTop">@dimen/sections_space</item>
        <item name="android:paddingBottom">@dimen/sections_space</item>
        <item name="android:background">@color/black_T40</item>
        <item name="android:textColor">@color/cyan_300</item>
    </style>

    <style name="button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="button.first">
        <item name="android:layout_marginEnd">1dp</item>
        <item name="android:layout_marginRight">1dp</item>
    </style>

    <style name="buttons_section">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">#808080</item>
        <item name="android:minHeight">48dip</item>
    </style>

    <style name="fab_back">
        <item name="android:id">@id/fab_back</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">16dp</item>
        <item name="fabSize">normal</item>
        <item name="srcCompat">@drawable/ic_action_back</item>
    </style>

    <style name="fab_back_autohide" parent="fab_back">
        <item name="layout_anchorGravity">bottom|right</item>
        <item name="layout_behavior">com.kidscademy.quiz.instruments.util.FABTranslateBehavior
        </item>
    </style>

    <style name="fab_close" parent="fab_back">
        <item name="android:id">@id/fab_close</item>
        <item name="srcCompat">@drawable/ic_action_close</item>
    </style>

    <style name="fab_dialog_close" parent="fab_back">
        <item name="android:id">@id/fab_dialog_close</item>
        <item name="srcCompat">@drawable/ic_action_close</item>
    </style>

</resources>
