<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- styles for text appearance -->

    <style name="TextAppearance"></style>

    <style name="TextAppearance.Small" parent="TextAppearance.AppCompat.Small">

    </style>

    <style name="TextAppearance.Small.Accent">
        <item name="android:textColor">@color/yellow_300</item>
    </style>

    <style name="TextAppearance.Small.Emphasized">
        <item name="android:textColor">@color/cyan_300</item>
    </style>

    <style name="TextAppearance.Small.Mute">
        <item name="android:textColor">@color/grey_300</item>
    </style>

    <style name="TextAppearance.Medium" parent="TextAppearance.AppCompat.Medium">

    </style>

    <style name="TextAppearance.Medium.Accent">
        <item name="android:textColor">@color/yellow_300</item>
    </style>

    <style name="TextAppearance.Medium.Emphasized">
        <item name="android:textColor">@color/cyan_300</item>
    </style>

    <style name="TextAppearance.Medium.Mute">
        <item name="android:textColor">@color/grey_300</item>
    </style>

    <style name="TextAppearance.Large" parent="TextAppearance.AppCompat.Large">

    </style>

    <style name="TextAppearance.Large.Accent">
        <item name="android:textColor">@color/yellow_300</item>
    </style>

    <style name="TextAppearance.Large.Emphasized">
        <item name="android:textColor">@color/cyan_300</item>
    </style>

    <style name="TextAppearance.Large.Mute">
        <item name="android:textColor">@color/grey_300</item>
    </style>

    <style name="TextAppearance.XLarge" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
    </style>

</resources>
