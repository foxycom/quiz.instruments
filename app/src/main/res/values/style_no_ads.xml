<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="no_ads"></style>

    <style name="no_ads.title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/no_ads_icon_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/paragraph_right_indent</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="no_ads.text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/sections_space</item>
        <item name="android:paddingLeft">@dimen/paragraph_start_indent</item>
        <item name="android:paddingRight">@dimen/paragraph_end_indent</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="no_ads.text.emphasized">
        <item name="android:layout_marginTop">@dimen/no_ads_margin</item>
        <item name="android:paddingBottom">@dimen/no_ads_padding</item>
    </style>

    <style name="no_ads.text.conclusion">
        <item name="android:textColor">@color/cyan_300</item>
        <item name="android:paddingTop">@dimen/sections_space</item>
        <item name="android:paddingBottom">@dimen/sections_space</item>
        <item name="android:background">@color/black_T40</item>
    </style>

</resources>