<?xml version="1.0" encoding="utf-8"?>
<resources>
    <item name="page_background" type="id" />

    <style name="Page"></style>

    <style name="Page.Background">
        <item name="android:id">@id/page_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="Page.Background.Mask">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/black</item>
        <item name="android:alpha">0.2</item>
    </style>

    <style name="Page.Header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_behavior">com.kidscademy.quiz.instruments.util.HeaderHideBehavior</item>
    </style>

</resources>
