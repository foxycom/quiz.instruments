<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text"></style>

    <style name="Text.Title">
        <item name="android:textAppearance">@style/TextAppearance.Large</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Text.Title.Center">
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Text.Title.Accent">
        <item name="android:textColor">@color/text_accent</item>
    </style>

    <style name="Text.Title.Block">
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">@dimen/block_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/block_vertical_padding</item>
        <item name="android:paddingEnd">@dimen/block_horizontal_padding</item>
        <item name="android:paddingStart">@dimen/block_horizontal_padding</item>
        <item name="android:background">@color/black_T40</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Text.Title.Block.Inverse">
        <item name="android:background">@color/white_T80</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.Paragraph">
        <item name="android:textAppearance">@style/TextAppearance.Small</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/paragraph_margin_top</item>
        <item name="android:paddingStart">@dimen/paragraph_start_indent</item>
        <item name="android:paddingEnd">@dimen/paragraph_end_indent</item>
    </style>

    <style name="Text.Paragraph.Accent">
        <item name="android:textAppearance">@style/TextAppearance.Small.Accent</item>
    </style>

    <style name="Text.Paragraph.Mute">
        <item name="android:textAppearance">@style/TextAppearance.Small.Mute</item>
    </style>

    <style name="Text.Paragraph.Emphasized">
        <item name="android:textAppearance">@style/TextAppearance.Small.Emphasized</item>
        <item name="android:paddingTop">@dimen/paragraph_margin_top</item>
        <item name="android:paddingBottom">@dimen/paragraph_margin_top</item>
        <item name="android:background">@color/black_T40</item>
    </style>

    <!-- center paragraph has the same value for both start and end indent -->
    <style name="Text.Paragraph.Center">
        <item name="android:paddingEnd">@dimen/paragraph_start_indent</item>
        <item name="android:paddingRight">@dimen/paragraph_start_indent</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Text.Paragraph.Center.Accent">
        <item name="android:textAppearance">@style/TextAppearance.Small.Accent</item>
    </style>

    <!-- justified paragraph streches on entire parent width without any start or end indent -->
    <style name="Text.Paragraph.Justify">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="Text.Paragraph.Justify.Accent">
        <item name="android:textAppearance">@style/TextAppearance.Small.Accent</item>
    </style>

    <!-- A text block is a paragraph with background and padding. A block is used when a paragraph should be emphasized. For this reason its font size is medium. -->
    <style name="Text.Block" parent="Text.Paragraph">
        <item name="android:paddingTop">@dimen/block_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/block_vertical_padding</item>
        <item name="android:paddingRight">@dimen/block_end_indent</item>
        <item name="android:paddingEnd">@dimen/block_end_indent</item>
        <item name="android:paddingLeft">@dimen/block_start_indent</item>
        <item name="android:paddingStart">@dimen/block_start_indent</item>
        <item name="android:background">@color/black_T40</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="Text.Block.Accent">
        <item name="android:textColor">@color/text_accent</item>
    </style>

    <style name="Text.Block.XLarge">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
    </style>

    <style name="Text.Block.XLarge.Center">
        <item name="android:paddingEnd">@dimen/block_start_indent</item>
        <item name="android:paddingRight">@dimen/block_start_indent</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Text.Block.XLarge.Center.Inverse">
        <item name="android:background">@color/white_T80</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- a label is an inline text attached to other view -->
    <style name="Text.Label">
        <item name="android:textAppearance">@style/TextAppearance.Small</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="Text.Label.Large">
        <item name="android:textAppearance">@style/TextAppearance.Large</item>
    </style>

    <!-- a block label fill entire parent width and has a top margin -->
    <style name="Text.Label.Block">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/label_margin_top</item>
    </style>

    <style name="Text.Label.Block.Mute">
        <item name="android:textColor">@color/text_mute</item>
    </style>

    <!-- A label title is an ordinary label that happen to be first on top and beside beeing larger it has no top margin. -->
    <style name="Text.Label.Title">
        <item name="android:textAppearance">@style/TextAppearance.Large</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="Text.Label.Mute">
        <item name="android:textColor">@color/text_mute</item>
    </style>

    <style name="Text.Label.Accent">
        <item name="android:textColor">@color/text_accent</item>
    </style>

    <!-- a separator sits between two inline labels and currently is colon; it also has margin, both left and right -->
    <style name="Text.Label.Separator">
        <item name="android:text">:</item>
        <item name="android:layout_marginLeft">@dimen/separator_margin</item>
        <item name="android:layout_marginRight">@dimen/separator_margin</item>
    </style>

    <style name="Text.Label.Separator.Large">
        <item name="android:textAppearance">@style/TextAppearance.Large</item>
    </style>

    <style name="Text.Label.Separator.Accent">
        <item name="android:textColor">@color/text_accent</item>
    </style>

    <style name="Text.Letter">
        <item name="android:textAppearance">@style/TextAppearance.Small</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:paddingRight">@dimen/letter_horizontal_padding</item>
        <item name="android:paddingLeft">@dimen/letter_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/letter_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/letter_vertical_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">@dimen/letter_min_width</item>
        <item name="android:textSize">@dimen/letter_size</item>
        <!-- for letters that are part of a grid -->
        <item name="layout_columnWeight">1</item>
    </style>

    <style name="Text.Letter.XLarge">
        <item name="android:textAppearance">@style/TextAppearance.XLarge</item>
    </style>

    <style name="Text.Letter.XLarge.Inverse">
        <item name="android:textColor">@color/text_inverse</item>
    </style>
</resources>
