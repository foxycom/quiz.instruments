<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="about"></style>

    <style name="about_developer" parent="about">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:background">@color/black_T40</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">20dp</item>
    </style>

    <style name="about_developer_picture" parent="about">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="borderColor">@color/white</item>
        <item name="borderWidth">2dp</item>
        <item name="shape">circle</item>
    </style>

    <style name="about_developer_info" parent="about">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">140dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="about_developer_name" parent="about">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="about_developer_expertise" parent="about">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="about_developer_place" parent="about">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
</resources>
