<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="card_level"></style>

    <style name="card_level.label">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:layout_marginBottom">@dimen/card_level_row_space</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/card_level_text_color</item>
    </style>

    <style name="card_level.value">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/card_level_text_color</item>
    </style>

    <style name="card_level.separator">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">@color/card_level_text_color</item>
    </style>

    <style name="card_level.action">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="backgroundColor">@color/red_300</item>
        <item name="borderColor">@color/grey_300</item>
        <item name="borderSize">2</item>
        <item name="iconDrawable">@drawable/ic_action_next</item>
    </style>

    <style name="card_level.name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/yellow_500</item>
        <item name="android:textSize">28dp</item>
    </style>

    <style name="card_level.grid">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:columnCount">3</item>
        <item name="android:orientation">horizontal</item>
    </style>

</resources>
